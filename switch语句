#include<stdio.h>
int main()
{int a =0 ;
printf("今天星期几？\n");
scanf("%d",&a);
switch(a){
case 1 :printf("今天星期一");break;
case 2 :printf("今天星期二");break;//break跳出循环。如果没有break 
case 3 :printf("今天星期三");break;//可以把多个情况合并 
case 4 :printf("今天星期四");break;
case 5 :printf("今天星期五");break;
case 6 :printf("今天星期六");break;
case 7 :printf("今天星期天");break;
default :printf("输错了");break;
}
} 
